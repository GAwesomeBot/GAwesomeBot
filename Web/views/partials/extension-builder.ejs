<form id="form" onsubmit="GAwesomeUtil.saveExtension(<%= isGallery %>, '<%- isGallery ? "/extensions/builder?" : currentPage + "?svrid=" + serverData.id + "&" %><%= extensionData._id ? ('extid=' + extensionData._id) : "" %>'); return false;">
	<div class="field">
		<label class="label">Name</label>
		<p class="control">
			<input id="builder-title" name="name" class="input" type="text" value="<%- extensionData.name %>" minlength="3" maxlength="100" required>
			<span class="help">A simple title for the extension.</span>
		</p>
	</div>
	<% if (!isGallery) { %>
	<div class="field">
		<label class="label">Channel(s)</label>
		<% for(var i=0; i<channelData.length; i++) { %>
			<label class="checkbox">
			<input name="enabled_channel_ids-<%= channelData[i].id %>" type="checkbox" <%= extensionData.enabled_channel_ids ? (extensionData.enabled_channel_ids.indexOf(channelData[i].id)>-1 ? "checked" : "") : "" %>>
				#<%= channelData[i].name %>
			</label>
			<br>
		<% } %>
		<span class="help">The extension will run only in these channels.</span>
		<br>
	</div>
	<% } %>
	<div class="field">
		<label class="label">Type</label>
		<p class="control">
			<span class="select">
				<select name="type" onchange="$('.builder-type-options').addClass('is-hidden');$('#builder-type-' + this.value + '-options').removeClass('is-hidden');">
					<option value="command" <%= extensionData.type=="command" ? "selected" : "" %>>Command</option>
					<option value="keyword" <%= extensionData.type=="keyword" ? "selected" : "" %>>Keyword</option>
                	<option value="timer" <%= extensionData.type=="timer" ? "selected" : "" %>>Timer</option>
					<option value="event" <%= extensionData.type==="event" ? "selected" : ""%>>Event</option>
				</select>
			</span>
			<span class="help">Command extensions behave like regular bot commands. Keyword extensions are activated by messages that contain one or more of the phrases you define below. Timer extensions are run periodically to fetch information and/or post updates.</span>
		</p>
	</div>
	<span id="builder-type-command-options" class="builder-type-options <%= (extensionData.type=="command" || !extensionData.type) ? '' : 'is-hidden' %>">
		<div class="field">
			<label class="label">Command key</label>
			<p class="control">
				<input name="key" class="input" type="text" value="<%- extensionData.key %>" minlength="3" maxlength="25">
				<span class="help">This string will be used to call the command. No spaces.</span>
			</p>
		</div>
		<% if (!isGallery) { %>
		<div class="field">
			<label class="label">Permissions</label>
			<p class="control">
				<span class="select">
					<select name="command-admin_level">
						<option value="0" <%= extensionData.admin_level==0 ? "" : "selected" %>>@everyone</option>
						<option value="1" <%= extensionData.admin_level==1 ? "selected" : "" %>>Admin level &ge;1</option>
						<option value="2" <%= extensionData.admin_level==2 ? "selected" : "" %>>Admin level &ge;2</option>
						<option value="3" <%= extensionData.admin_level==3 ? "selected" : "" %>>Admin level 3</option>
					</select>
				</span>
				<span class="help">The command will only respond to members that have the selected bot admin level (or higher).</span>
			</p>
		</div>
		<% } %>
		<div class="field">
			<label class="label">Usage</label>
			<p class="control">
				<input name="usage_help" class="input" type="text" value="<%= extensionData.usage_help %>" maxlength="150">
				<span class="help">Simple usage information, e.g. <code>&lt;param1&gt; &lt;param2&gt;</code>.</span>
			</p>
		</div>
		<div class="field">
		<label class="label">Extended help</label>
			<p class="control">
				<textarea name="extended_help" class="textarea" maxlength="1000"><%- extensionData.extended_help %></textarea>
				<span class="help">Detailed information about the extension, shown within the <code>help</code> command.</span>
			</p>
		</div>
	</span>
	<span id="builder-type-keyword-options" class="builder-type-options <%= extensionData.type=="keyword" ? '' : 'is-hidden' %>">
		<div class="field">
			<label class="label">Keywords</label>
			<p class="control">
				<input name="keywords" class="input" type="text" value="<%- extensionData.keywords ? extensionData.keywords.join(',') : '' %>">
				<span class="help">Comma-separated list of strings that a message must contain to activate the extension.</span>
			</p>
		</div>
		<div class="field">
			<label class="label">Case-sensitivity</label>
			<p class="control">
				<label class="checkbox">
				<input name="case_sensitive" type="checkbox" <%= extensionData.case_sensitive ? "checked" : "" %>>
					Extension keyword matching is case-sensitive
				</label>
			</p>
		</div>
		<% if (!isGallery) { %>
		<div class="field">
			<label class="label">Permissions</label>
			<p class="control">
				<span class="select">
					<select name="keyword-admin_level">
						<option value="0" <%= extensionData.admin_level==0 ? "" : "selected" %>>@everyone</option>
						<option value="1" <%= extensionData.admin_level==1 ? "selected" : "" %>>Admin level &ge;1</option>
						<option value="2" <%= extensionData.admin_level==2 ? "selected" : "" %>>Admin level &ge;2</option>
						<option value="3" <%= extensionData.admin_level==3 ? "selected" : "" %>>Admin level 3</option>
					</select>
				</span>
				<span class="help">The extension will only run if the message author has the selected bot admin level (or higher).</span>
			</p>
		</div>
		<% } %>
	</span>
	<span id="builder-type-timer-options" class="builder-type-options <%= extensionData.type=="timer" ? '' : 'is-hidden' %>">
		<div class="field">
			<label class="label">Interval</label>
			<p class="control">
				<input name="interval" class="input" type="number" value="<%- extensionData.interval %>" min="300000" max="86400000" >
				<span class="help">Number of milliseconds between each run of the extension.</span>
			</p>
		</div>
	</span>
	<span id="builder-type-event-options" class="builder-type-options <%= extensionData.type=="event" ? '' : 'is-hidden' %>">
		<div class="field">
			<label class="label">Event</label>
			<p class="control">
				<div class="select">
  					<select name="event">
						<% events.forEach(event => { %>
						<option value="<%= event %>"><%= event %></option>
						<% }); %>
  					</select>
				</div>
				<span class="help">The event that will trigger this extension.</span>
			</p>
		</div>
	</span>
	<br>
	<div class="field">
		<label class="label">Scopes</label>
		<label class="checkbox" title="Can ban members from this guild">
			<input name="scope_ban" type="checkbox" <%= extensionData.scopes ? (extensionData.scopes.includes("ban") ? "checked" : "") : "" %>>
			<code>ban</code>
		</label>
		<br>
		<label class="checkbox" title="Can kick members from this guild">
			<input name="scope_kick" type="checkbox" <%= extensionData.scopes ? (extensionData.scopes.includes("kick") ? "checked" : "") : "" %>>
			<code>kick</code>
		</label>
		<br>
		<label class="checkbox" title="Can access information about this guild's roles">
			<input name="scope_roles_read" type="checkbox" <%= extensionData.scopes ? (extensionData.scopes.includes("roles_read") ? "checked" : "") : "" %>>
			<code>roles_read</code>
		</label>
		<br>
		<label class="checkbox" title="Can modify this guild's roles and assign roles to members">
			<input name="scope_roles_manage" type="checkbox" <%= extensionData.scopes ? (extensionData.scopes.includes("roles_manage") ? "checked" : "") : "" %>>
			<code>roles_manage</code>
		</label>
		<br>
		<label class="checkbox" title="Can access information about this guild's channels such as pinned messages or descriptions">
			<input name="scope_channels_read" type="checkbox" <%= extensionData.scopes ? (extensionData.scopes.includes("channels_read") ? "checked" : "") : "" %>>
			<code>channels_read</code>
		</label>
		<br>
		<label class="checkbox" title="Can modify this guild's channels">
			<input name="scope_channels_manage" type="checkbox" <%= extensionData.scopes ? (extensionData.scopes.includes("channels_manage") ? "checked" : "") : "" %>>
			<code>channels_manage</code>
		</label>
		<br>
		<label class="checkbox" title="Can access this guild's settings">
			<input name="scope_guild_read" type="checkbox" <%= extensionData.scopes ? (extensionData.scopes.includes("guild_read") ? "checked" : "") : "" %>>
			<code>guild_read</code>
		</label>
		<br>
		<label class="checkbox" title="Can modify this guild's settings">
			<input name="scope_guild_manage" type="checkbox" <%= extensionData.scopes ? (extensionData.scopes.includes("guild_manage") ? "checked" : "") : "" %>>
			<code>guild_manage</code>
		</label>
		<br>
		<label class="checkbox" title="Can access this guild's member list">
			<input name="scope_members_read" type="checkbox" <%= extensionData.scopes ? (extensionData.scopes.includes("members_read") ? "checked" : "") : "" %>>
			<code>members_read</code>
		</label>
		<br>
		<label class="checkbox" title="Can modify this guild's member list, for example by purging or managing nicknames">
			<input name="scope_members_manage" type="checkbox" <%= extensionData.scopes ? (extensionData.scopes.includes("members_manage") ? "checked" : "") : "" %>>
			<code>members_manage</code>
		</label>
		<br>
		<label class="checkbox" title="Can read previous messages in the channel this extension was executed in">
			<input name="scope_messages_read" type="checkbox" <%= extensionData.scopes ? (extensionData.scopes.includes("messages_read") ? "checked" : "") : "" %>>
			<code>messages_read</code>
		</label>
		<br>
		<label class="checkbox" title="Can read previous messages in all channels">
			<input name="scope_messages_global" type="checkbox" <%= extensionData.scopes ? (extensionData.scopes.includes("messages_global") ? "checked" : "") : "" %>>
			<code>messages_global</code>
		</label>
		<br>
		<label class="checkbox" title="Can write messages in all channels. The extension can always write messages in the channel it was executed in">
			<input name="scope_messages_write" type="checkbox" <%= extensionData.scopes ? (extensionData.scopes.includes("messages_write") ? "checked" : "") : "" %>>
			<code>messages_write</code>
		</label>
		<br>
		<label class="checkbox" title="Can manage all messages in the channels where it can read messages">
			<input name="scope_messages_manage" type="checkbox" <%= extensionData.scopes ? (extensionData.scopes.includes("messages_manage") ? "checked" : "") : "" %>>
			<code>messages_manage</code>
		</label>
		<br>
		<label class="checkbox" title="Can read, but not modify, this guild's GAB Configuration">
			<input name="scope_config" type="checkbox" <%= extensionData.scopes ? (extensionData.scopes.includes("config") ? "checked" : "") : "" %>>
			<code>config</code>
		</label>
		<span class="help">These scopes dictate what your extension can and can't do in the guild it is executed in.</span>
	</div>
	<div class="field">
		<label class="label">Timeout</label>
		<p class="control">
			<input name="timeout" class="input" type="number" value="<%- extensionData.timeout %>" min="100" max="10000" required>
			<span class="help">The amount of milliseconds that your extension can run. If your extension takes longer to execute than the timeout, it will be killed.</span>
		</p>
	</div>
	<br>
	<div class="field">
		<label class="label">
			Code
			&nbsp;
			<a class="button is-small" href="/wiki/Extensions#javascriptapi" target="_blank">
				<span class="icon is-small">
		        	<i class="fa fa-book"></i>
		    	</span>
		    	<span>Extension API Docs</span>
			</a>
		</label>
		<p class="control">
			<textarea id="builder-code-box" name="code" style="resize:none"><%- extensionData.code %></textarea>
		</p>
		<br>
		<label class="button is-small">
				<span class="icon is-small">
					<i class="fa fa-upload"></i>
				</span>
			<span>Upload</span>
			<input id="builder-code-upload" type="file" onchange="GAwesomeUtil.uploadCode(this.files);" style="display: none;">
		</label>
		<a class="button is-small" onclick="GAwesomeUtil.downloadCode();">
				<span class="icon is-small">
					<i class="fa fa-download"></i>
				</span>
			<span>Download</span>
		</a>
	</div>
    <br>
	<div class="field">
		<label class="label">Description</label>
		<p class="control">
			<textarea id="builder-publish-description" <%- !isGallery ? "" : "name='description'" %> class="textarea" maxlength="2000" placeholder="Description of extension, in markdown" <%= !isGallery ? "" : "required" %>><%= extensionData.description %></textarea>
		</p>
	</div>
	<% if (isGallery && extensionData._id && extensionData.state === "saved") { %>
		<a id="publish-<%= extensionData._id %>" class="button" onclick="GAwesomeUtil.publishExtension('<%= extensionData._id %>');">
			<span class="icon is-small">
				<i class="fa fa-share-alt"></i>
			</span>
			<span>Publish</span>
		</a>
		<br>
    <% } else if (isGallery && extensionData._id && extensionData.state !== "saved") { %>
    	<a class="button is-info" href="/extensions/<%= extensionData.state %>?id=<%= extensionData._id %>" target="_blank">
			<span class="icon is-small">
				<i class="fa fa-info"></i>
			</span>
			<span>View Listing</span>
		</a>
		<br>
    <% } %>
    <br>
	<% var formButtonsUnsaved = false; %>
	<% include ../partials/form-buttons %>
    <% if (isGallery && extensionData._id && extensionData.state === "gallery") { %>
    	<span class="help">Updating the extension will <strong>remove</strong> it from the gallery until it has been approved by a GAwesomeBot maintainer. Points will be preserved.</span>
    <% } %>
</form>